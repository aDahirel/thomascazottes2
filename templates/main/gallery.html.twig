{% block body %}
    <div class="wrapper">
        {% if files_name is null %}
            {% for i in 1..50 %}
                <div class="cube mt-3">
                    <!-- Picture -->
                    <img src="gallerie/SITE-GALERIE-MIGNA-({{ i }}-of-50).jpg" class="myImg" alt="Texte">
                    <!-- Description -->
                    <div class="description">
                        <div class="description-top">
                            <div style="margin-left: 60px">
                                1
                            </div>
                            <div>
                                <b>PARIS 2018</b> T-MAX 400
                            </div>
                        </div>
                        <div class="description-bottom">
                            <div style="margin-left: 40px">
                                {{ i }}
                            </div>
                            <div>
                                <b>→</b> {{ i }}A
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            {% for i in 1..nb_files %}
                <div class="cube mt-3">
                    <!-- Picture -->
                    <img src="{{ files_name }}SITE-{{ name }}-{{ type }}-MIGNA-({{ i }}-of-{{ nb_files }}).jpg"
                         class="myImg" alt="Texte">
                    <!-- Description -->
                    <div class="description">
                        <div class="description-top">
                            <div style="margin-left: 60px">
                                1
                            </div>
                            <div>
                                <b>PARIS 2018</b> T-MAX 400
                            </div>
                        </div>
                        <div class="description-bottom">
                            <div style="margin-left: 40px">
                                {{ i }}
                            </div>
                            <div>
                                <b>→</b> {{ i }}A
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
    <!-- The Modal -->
    <!-- onclick="document.getElementById('myModal').style.display='none'" -->
    <div id="myModal" class="modal" >
        <!-- The Close Button -->
        <span class="close" onclick="document.getElementById('myModal').style.display='none'">&times;</span>
        <span class="next" style="position: absolute; top: 50%; right: 50px; color: #f1f1f1; font-size: 40px; font-weight: bold; transition: 0.3s;"
              onclick="document.getElementById('myModal').style.display='none'">></span>
        <span class="prev" style="position: absolute; top: 50%; left: 50px; color: #f1f1f1; font-size: 40px; font-weight: bold; transition: 0.3s;"
              onclick="document.getElementById('myModal').style.display='none'"><</span>
        <!-- Modal Content (The Image) -->
        <img class="modal-content" id="img01">

    </div>
    <!-- Back -->
    <div class="button-article-container text-black m-5">
        <a class="button-article" href="/" style="font-size: 23px;">Retour</a>
    </div>
{% endblock %}