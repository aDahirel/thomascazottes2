{% block body %}
<form><h2>Contact</h2><hr>
    <fieldset>
      <legend>Mes coordonnées</legend>
      <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
              <input type="text" readonly="" class="form-control-plaintext" id="staticEmail" value="thomascazottes@gmail.com">
            </div>
            <label for="staticPhone" class="col-sm-2 col-form-label">Téléphone</label>
            <div class="col-sm-10">
              <input type="text" readonly="" class="form-control-plaintext" id="staticPhone" value="0686158613">
            </div>
            <label for="staticLinkedIn" class="col-sm-2 col-form-label">LinkedIn</label>
            <div class="col-sm-10">
              <a href="https://www.linkedin.com/in/thomas-cazottes-b2064a160/" target="_blank"><input type="text" readonly="" class="form-control-plaintext" id="staticLinkedIn" value="https://www.linkedin.com/in/thomas-cazottes/"></a>
            </div>
            <label for="staticYoutube" class="col-sm-2 col-form-label">Youtube</label>
            <div class="col-sm-10">
              <a href="https://www.youtube.com/channel/UC0iGGZpe03IPO5bq_aiiw1w" target="_blank"><input type="text" readonly="" class="form-control-plaintext" id="staticYoutube" value="https://www.youtube.com/channel/Lexmurphy/"></a>
            </div>
        </div><hr>
      <legend>Me contacter</legend>
      <fieldset class="form-group">
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
                Réalisation audiovisuelle
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios2" value="option2">
                Raison professionnelle
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios3" value="option3">
                Autres
              </label>
            </div>
          </fieldset>
      <div class="form-group">
        <label for="exampleInputEmail1">Titre</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter un titre">
        <small id="emailHelp" class="form-text text-muted">Texte d'exemple.</small>
      </div>
      <div class="form-group">
        <label for="exampleTextarea">Message</label>
        <textarea class="form-control" id="exampleTextarea" rows="5"></textarea>
      </div>
      <div class="form-group">
        <label for="exampleInputFile">Joindre un fichier</label>
        <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
        <small id="fileHelp" class="form-text text-muted">Texte d'exemple.</small>
      </div>
      <button type="submit" class="btn btn-primary">Envoyer</button>
    </fieldset>
  </form>
  <style>
    form{
        padding-left: 20%;
        padding-right: 20%;
        padding-top: 3%;
        padding-bottom: 3%;
    }
    
    #staticLinkedIn, #staticYoutube{
        cursor: pointer;
    }
  </style>
 {% endblock %}
